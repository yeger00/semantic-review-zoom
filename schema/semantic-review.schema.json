{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/semantic-pr-zoom/semantic-review.schema.json",
  "title": "SemanticReview",
  "description": "Structured semantic review of a pull request with three analysis layers",
  "type": "object",
  "required": ["version", "generated_at", "pr", "layers"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "enum": ["1.0"]
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the review was generated"
    },
    "pr": {
      "type": "object",
      "required": ["number", "title", "url", "base", "head"],
      "properties": {
        "number": { "type": "integer", "minimum": 1 },
        "title": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "base": { "type": "string", "description": "Base branch name" },
        "head": { "type": "string", "description": "Head branch name" }
      },
      "additionalProperties": false
    },
    "layers": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/PackageLayer" },
          { "$ref": "#/definitions/SymbolLayer" },
          { "$ref": "#/definitions/DiffLayer" }
        ]
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "PackageLayer": {
      "type": "object",
      "required": ["id", "title", "description", "items"],
      "properties": {
        "id": { "type": "string", "enum": ["packages"] },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "kind", "change_type", "change_pct", "summary", "files_changed", "insertions", "deletions"],
            "properties": {
              "name": { "type": "string" },
              "kind": { "type": "string", "enum": ["package", "module"] },
              "change_type": { "type": "string", "enum": ["added", "modified", "deleted"] },
              "change_pct": { "type": "number", "minimum": 0, "maximum": 100 },
              "summary": { "type": "string" },
              "files_changed": { "type": "integer", "minimum": 0 },
              "insertions": { "type": "integer", "minimum": 0 },
              "deletions": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "SymbolLayer": {
      "type": "object",
      "required": ["id", "title", "description", "items"],
      "properties": {
        "id": { "type": "string", "enum": ["symbols"] },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "kind", "file", "change_type", "signature_before", "signature_after", "summary"],
            "properties": {
              "name": { "type": "string" },
              "kind": { "type": "string", "enum": ["function", "struct", "class", "method", "interface"] },
              "file": { "type": "string" },
              "change_type": { "type": "string", "enum": ["added", "modified", "deleted"] },
              "signature_before": { "type": ["string", "null"] },
              "signature_after": { "type": ["string", "null"] },
              "summary": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "DiffLayer": {
      "type": "object",
      "required": ["id", "title", "description", "items"],
      "properties": {
        "id": { "type": "string", "enum": ["diffs"] },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["file", "package", "hunks"],
            "properties": {
              "file": { "type": "string" },
              "package": { "type": "string" },
              "hunks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["header", "is_formatting_only", "lines"],
                  "properties": {
                    "header": { "type": "string" },
                    "is_formatting_only": { "type": "boolean" },
                    "lines": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["type", "content"],
                        "properties": {
                          "type": { "type": "string", "enum": ["insert", "delete", "context"] },
                          "content": { "type": "string" }
                        },
                        "additionalProperties": false
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}
